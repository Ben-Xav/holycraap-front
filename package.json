{
  "name": "holycraap-front",
  "version": "0.1.0",
  "description": "In search of the one and only Holy Craap - a treasure also known as \"Big Whoop(TM)\" - a new adventure game written in Java and JavaScript, using Spring and React.",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.47",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "npm-watch": "^0.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "typescript": "^3.7.5"
  },
  "watch": {
    "test": "{src,test}/*.js"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "tape test/*.js",
    "eject": "react-scripts eject",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BenMorant/holycraap-front.git"
  },
  "keywords": [
    "fun",
    "game",
    "holy craap !!!"
  ],
  "author": "Ben & Xav",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/BenMorant/holycraap-front/issues"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,txt,ts,tsx,jsx,html,js,css,md}": ["prettier --write",
    "eslint --fix",
    "git add",
    "jest --bail --findRelatedTests"]
  }
}
